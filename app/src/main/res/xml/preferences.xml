<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="pref_ssid"
        android:title="SSID"
        android:maxLength="32"/>

    <EditTextPreference
        android:key="pref_mac"
        android:title="MAC"
        android:maxLength="17"/>

    <EditTextPreference
        android:key="pref_channels"
        android:title="Channels" />

    <ListPreference
        android:key="pref_proximity"
        android:title="Proximity"
        android:entries="@array/proximities_array"
        android:entryValues="@array/proximity_values"
        android:defaultValue="@string/proximity_all"/>
</PreferenceScreen>